generator client {
  provider = "prisma-client-js"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Role {
  id        Int        @id @default(autoincrement())
  name      String
  employees Employee[]
}

model Employee {
  id        Int    @id @default(autoincrement())
  firstName String
  lastName  String
  roleId    Int
  role      Role   @relation(fields: [roleId], references: [id])
}
